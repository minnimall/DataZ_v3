                        <img alt="<%= exercise.title %>" style="background-color: transparent;" src="<%= exercise.imgUrl %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="<%= exercise.videoUrl %>" target="_blank" class="card-link">
                                    <%= exercise.title %>
                                </a>
                            </h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text mb-0">
                                    <%= exercise.description %> <%= exercise.duration %>
