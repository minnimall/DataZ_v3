<!-- Add Exercise Form -->
<div class="add-exercise-form" id="exerciseForm">
    <form action="/arm-dumbbel/add" method="POST">
        <input type="text" name="title" placeholder="Title" required class="form-control mb-2">
        <input type="text" name="videoUrl" placeholder="Video URL" required class="form-control mb-2">
        <input type="text" name="imgUrl" placeholder="Image URL" required class="form-control mb-2">
        <input type="text" name="description" placeholder="Description" class="form-control mb-2">
        <input type="text" name="duration" placeholder="Duration" required class="form-control mb-2">
        <input type="text" name="categories" placeholder="Categories (comma separated)" class="form-control mb-2">
        <select name="difficulty" class="form-control mb-2">
            <option value="easy">Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
        </select>
        <input type="number" name="fireLevel" min="1" max="3" placeholder="Fire Level" class="form-control mb-2">
        <button type="submit" class="btn btn-primary">Add Exercise</button>
    </form>
</div>

                <script>
                    // Toggle the display of the exercise form
        const addButton = document.getElementById('addButton');
        const exerciseForm = document.getElementById('exerciseForm');
        addButton.addEventListener('click', () => {
            if (exerciseForm.style.display === "none" || exerciseForm.style.display === "") {
                exerciseForm.style.display = "block";
            } else {
                exerciseForm.style.display = "none";
            }
        });

                    // JavaScript for filtering content by category
                    const checkboxes =
                        document.querySelectorAll(".filter-checkbox");
                    const workoutCards =
                        document.querySelectorAll(".workout-card");

                    checkboxes.forEach(checkbox => {
                        checkbox.addEventListener("change", () => {
                            const selectedCategories = Array.from(checkboxes)
                                .filter(cb => cb.checked)
                                .map(cb => cb.value);

                            workoutCards.forEach(card => {
                                const categories = card.dataset.categories.split(",");
                                const hasCategory = categories.some(category =>
                                    selectedCategories.includes(category));

                                card.style.display = hasCategory ? "block" : "none";
                            });
                        });
                    });

                    document.addEventListener('DOMContentLoaded', function() {
        const editButtons = document.querySelectorAll('.edit-btn');
        const deleteButtons = document.querySelectorAll('.delete-btn');

        // ฟังก์ชันสำหรับแสดงฟอร์มแก้ไข
        editButtons.forEach(button => {
            button.addEventListener('click', function() {
                const exerciseId = this.getAttribute('data-id');
                const editForm = document.getElementById(`editForm-${exerciseId}`);
                editForm.style.display = (editForm.style.display === 'none' || editForm.style.display === '') ? 'block' : 'none';
            });
        });

        // ฟังก์ชันสำหรับการลบการออกกำลังกาย
        deleteButtons.forEach(button => {
            button.addEventListener('click', function() {
                const exerciseId = this.getAttribute('data-id');

                if (confirm('Are you sure you want to delete this exercise?')) {
                    fetch(`/arm-dumbbel/delete/${exerciseId}`, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload(); // รีโหลดหน้าเมื่อสำเร็จ
                        } else {
                            alert('Error deleting exercise');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                }
            });
        });
    });

                </script>
