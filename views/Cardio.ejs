<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ออกกำลังกาย!</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
        crossorigin="anonymous" />
  
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

  <link rel="stylesheet" href="exercise.css">

  <style>
    .container {
      width: 90%;
      max-width: 1000px;
      margin: 40px auto;
      z-index: 2;
    }

    .box {
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      margin-bottom: 20px;
      margin-top: 40px;
    }

    .icon-container i {
      color: #ff4500;
    }

    .icon-container i.dimmed {
      opacity: 0.4;
    }

    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    /* Styles for the filter box */
    .filter-box {
      position: fixed;
      top: 180px;
      right: 30px;
      padding: 20px;
      border: 1px solid #ccc;
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      width: 200px;
      
    }

    .filter-box h4 {
      margin-bottom: 15px;
    }

    .filter-box label {
      display: block;
      margin-bottom: 10px;
    }
  </style>
</head>

<body>

  <!-- Navigation and Breadcrumb -->
  <%- include('./partials/head.ejs') %>
  <%- include('./partials/nav.ejs') %>
  <%- include('partials/breadcrumb') %>

  <div class="container my-5">

    <!-- Filter Box -->
    <div class="filter-box">
      <h4>Filter Workouts</h4>
      <label><input type="checkbox" class="filter-checkbox" value="easy" checked> Easy <i class="fas fa-fire"></i> <i class="fas fa-fire dimmed"></i> <i class="fas fa-fire dimmed"></i></label>
      <label><input type="checkbox" class="filter-checkbox" value="medium" checked> Medium <i class="fas fa-fire"></i> <i class="fas fa-fire"></i> <i class="fas fa-fire dimmed"></i></label>
      <label><input type="checkbox" class="filter-checkbox" value="hard" checked> Hard <i class="fas fa-fire"></i> <i class="fas fa-fire"></i> <i class="fas fa-fire"></i></label>
    </div>

    <!-- Easy Section -->
    <div class="box category-easy">
      <h2>Easy</h2>
      <div class="row row-cols-1 row-cols-md-2 g-4">

        <a href="https://www.youtube.com/watch?v=IzonmedVyAU" target="_blank" class="text-decoration-none"> 
          <div class="col">
            <div class="card">
              <img class="card-img-top" 
                   src="https://i.ytimg.com/vi/IzonmedVyAU/hq720.jpg?sqp=-oaymwEcCNAFEJQDSFXyq4qpAw4IARUAAIhCGAFwAcABBg==&rs=AOn4CLBBUUN2MImqlqjdkxsyPEP6sidnkA" 
                   alt="Medium workout">
              <div class="card-body">
                <h5 class="card-title">BURN FAT FULL BODY</h5>
                <p class="card-text">Youtube: FIT DESIGN PRIME (5MIN)</p>
                <div class="icon-container">
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire dimmed"></i>
                  <i class="fas fa-fire dimmed"></i>
                </div>
              </div>
            </div>
          </div>
        </a>

      </div>
    </div>

    <!-- Medium Section -->
    <div class="box mt-4 category-medium">
      <h2>Medium</h2>
      <div class="row row-cols-1 row-cols-md-2 g-4">

        <!-- Medium Video 1 -->
        <a href="https://www.youtube.com/watch?v=8cI9q3gptng&t=1654s"  target="_blank" class="text-decoration-none">
          <div class="col">
            <div class="card">
              <img class="card-img-top" 
                   src="https://i.ytimg.com/vi/8cI9q3gptng/hq720.jpg?sqp=-oaymwEcCNAFEJQDSFXyq4qpAw4IARUAAIhCGAFwAcABBg==&rs=AOn4CLAxM_vQIUCRwssvjAj8VLSSDTerdw" 
                   alt="Medium workout">
              <div class="card-body">
                <h5 class="card-title">BURN FAT FULL BODY</h5>
                <p class="card-text">Youtube: SquatCouple (30MIN)</p>
                <div class="icon-container">
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire dimmed"></i>
                </div>
              </div>
            </div>
          </div>
        </a>

        <!-- Medium Video 2 -->
        <a href="https://www.youtube.com/watch?v=tAbfSWLrIBA"  target="_blank" class="text-decoration-none">
          <div class="col">
            <div class="card">
              <img class="card-img-top" 
                   src="https://i.ytimg.com/vi/tAbfSWLrIBA/hq720.jpg?sqp=-oaymwEcCNAFEJQDSFXyq4qpAw4IARUAAIhCGAFwAcABBg==&rs=AOn4CLD0XgdY6vTVAOegbXekxEEXYH2FhA" 
                   alt="Easy workout">
              <div class="card-body">
                <h5 class="card-title">BURN FAT FULL BODY</h5>
                <p class="card-text">Youtube: SquatCouple (24MIN)</p>
                <div class="icon-container">
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire dimmed"></i>
                </div>
              </div>
            </div>
          </div>
        </a>

      </div>
    </div>

    <!-- Hard Section -->
    <div class="box mt-4 category-hard">
      <h2>Hard</h2>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <a href="https://www.youtube.com/watch?v=M0uO8X3_tEA"  target="_blank" class="text-decoration-none">
          <div class="col">
            <div class="card">
              <img class="card-img-top" 
                   src="https://i.ytimg.com/vi/M0uO8X3_tEA/hq720.jpg?sqp=-oaymwEcCNAFEJQDSFXyq4qpAw4IARUAAIhCGAFwAcABBg==&rs=AOn4CLAmDcLAu2PYkJBAQ_1YN0UpLlT2hg" 
                   alt="Hard workout">
              <div class="card-body">
                <h5 class="card-title">Full Body Cardio HIIT Workout</h5>
                <p class="card-text">Youtube: Juice & Toya (29MIN)</p>
                <div class="icon-container">
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire"></i>
                  <i class="fas fa-fire"></i>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>

  </div>

  <script>
    // JavaScript for filtering content
    const checkboxes = document.querySelectorAll('.filter-checkbox');
    const easySection = document.querySelector('.category-easy');
    const mediumSection = document.querySelector('.category-medium');
    const hardSection = document.querySelector('.category-hard');

    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', () => {
        if (checkbox.value === 'easy') {
          easySection.style.display = checkbox.checked ? 'block' : 'none';
        }
        if (checkbox.value === 'medium') {
          mediumSection.style.display = checkbox.checked ? 'block' : 'none';
        }
        if (checkbox.value === 'hard') {
          hardSection.style.display = checkbox.checked ? 'block' : 'none';
        }
      });
    });
  </script>

</body>
</html>
